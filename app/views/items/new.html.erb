<%= form_for [:user, @item] do |item_form| %>

    <%= item_form.text_field :name, placeholder: "Item Name" %>
    <%= item_form.hidden_field :item_type, value: "Customer" %>
    <%= item_form.text_field :price, placeholder: "Price" %>
    <%= item_form.text_field :item_length, placeholder: "Length" %>
    <%= item_form.text_field :item_width, placeholder: "Width" %>
    <%= item_form.text_field :item_height, placeholder: "Height" %>
    <%= item_form.text_field :item_status, placeholder: "Status" %>
    <%= item_form.text_field :item_description, placholder: "Description" %>

    <%= item_form.submit "Submit" %>


<% end %>

