<% provide(:title, "#{@user.full_name}'s Fifth Room") %>

<div class="row-fluid">
  <div class="span12">
    <h3>Hi, <%= @user.first_name %>! </h3>
    <p>Welcome to your 5th Room! From here, you can access the items you have in storage, have them delivered, or schedule new pickups. Pretty simple, huh?</p>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <%= link_to "Schedule a Pickup", new_user_order_path(@user), class:"btn btn-danger" %>
    <% if @user.items.stored.count > 0 %>
        <%= link_to "Schedule a Delivery", new_user_order_item_path(@user), class: "btn btn-danger"%>
    <% end %>
  </div>
</div>

<div class="row-fluid" style="margin-top: 30px;">
  <div class="span12">
    <div class="span8">
      <h3>Stored Items</h3>

      <% if @user.items.stored.count > 0 %>
        <%= render 'users/users_stored_items' %>
      <% else %>
        <p>You don't have anything stored right now. <%= link_to "Request a pickup!", new_user_order_path(@user) %></p>
      <% end %>

    </div>
    <div class="span4">
      <h3>Upcoming Pickups & Deliveries</h3>
        <%= render 'user_upcoming_orders' %>
    </div>
  </div>
</div>








