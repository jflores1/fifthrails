<div class="row-fluid">
  <div class="span12">
    <h2>Hi, <%= current_user.first_name %>! </h2>
    <p>Welcome to your account page. From here, you can see items you have in storage, have them delivered, or schedule new pickukps.</p>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <%= link_to "Schedule a Pickup", new_user_order_path(@user), class:"btn btn-danger" %>
    <% if @user.items.stored.count > 0 %>
        <%= link_to "Schedule a Delivery", new_user_order_item_path(@user), class: "btn btn-danger"%>
    <% end %>
  </div>
</div>

<div class="row-fluid" style="margin-top: 30px;">
  <div class="span12">
    <div class="span8">
      <h3>Stored Items</h3>

      <% if @user.items.stored.count > 0 %>
        <%= render 'users/users_stored_items' %>
      <% else %>
        <p>You don't have any items stored right now.</p>
      <% end %>

    </div>
    <div class="span3">
      <h3>Upcoming Pickups & Deliveries</h3>
        <%= render 'user_upcoming_orders' %>
    </div>
  </div>
</div>








