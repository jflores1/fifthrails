<table class="table table-striped">
  <thead>
  <tr>
    <th>Item Name</th>
    <th>Item Status</th>
    <th>Monthly Rent</th>
    <th>Item Length</th>
    <th>Item Width</th>
    <th>Item Height</th>
  </tr>
  </thead>
  <tbody>
  <% @item.each do |item| %>
      <tr id="<%= dom_id(item) %>">
        <td><%= item.name %></td>
        <td><%= item.item_status %></td>
        <td><%= number_to_currency (item.price) %></td>
        <td><%= item.item_length %></td>
        <td><%= item.item_width %></td>
        <td><%= item.item_height %></td>
        <% if current_user.admin? %>
            <td><%= link_to "Edit Item", edit_user_item_path(@user, item) %></td>
            <td><%= link_to "Delete Item", [@user, item], method: :delete, remote: true %></td>
        <% end %>
      </tr>

  <% end %>

  </tbody>
</table>
