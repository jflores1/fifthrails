<%= provide(:title, 'New Self Storage Service in Atlanta, GA') %>

<!-- Carousel  -->
<div class="container body-padding">
  <div id="myCarousel" class="carousel slide">
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag "no_schlep.png", class:"img-rounded" %>
        <div class="container">
          <div class="carousel-caption">
            <h1>Never Schlep to Storage Again</h1>
            <p class="lead">We'll pick up the things you want to store and bring them to you when you need them.  You don't lift a finger.</p>
            <a class="btn btn-caption" href="#whyus">Learn More</a>
          </div>
        </div>
      </div>
      <div class="item">
        <%= image_tag "not_empty_space.png", class:"img-rounded" %>
        <div class="container">
          <div class="carousel-caption">
            <h1>Stop Paying for Empty Space</h1>
            <p class="lead">Rent storage by the item and never pay for a half empty unit again. Mini Storage has never been more flexible.</p>
            <a class="btn btn-caption" href="#whyus">Learn more</a>
          </div>
        </div>
      </div>
      <div class="item">
        <%= image_tag "manage_online.png", class:"img-rouned" %>
        <div class="container">
          <div class="carousel-caption">
            <h1>Manage Your Storage Online</h1>
            <p class="lead">Never forget what you have stored and request items back with a few mouse clicks.</p>
            <a class="btn btn-caption" href="#whyus">Learn More</a>
          </div>
        </div>
      </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
  </div>
</div>

<!-- Features -->

<div class="container why">

    <%= render 'partial_why_fifth_room' %>

</div>



<!-- Pricing -->
<div class="container pricing">
  <div class="row">
    <div class="span12">
      <a id="pricing" class="anchor">&nbsp;</a>
      <%= image_tag "pricing_header.png", class:"img" %>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <h2>How much stuff are you storing?</h2>
    </div>
  </div>
  <div class="row">
    <div class="span5 offset1 image-rotate">
      <%= link_to image_tag("by_the_item.png", class:"img-polaroid"), "#by_the_item_modal", html_options = {"data-toggle" => "modal"} %>
      <h2>A Few Items</h2>
      <a href="#by_the_item_modal" role="button" class="btn btn-danger" data-toggle="modal">Find Out More<i class="icon-chevron-right icon-white"> </i></a>
    </div>

    <div class="span5 image-rotate-2">
      <%= link_to image_tag("by_the_room.png", class: "img-polaroid"), "#by_the_room_modal", html_options = {"role" => "button", "data-toggle" => "modal"} %>
      <h2>An Entire Roomful</h2>
      <a href="#by_the_room_modal" role="button" class="btn btn-danger" data-toggle="modal">Find Out More<i class="icon-chevron-right icon-white"> </i></a>
    </div>
  </div>
</div>

