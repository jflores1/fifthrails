<%= form_for(:session, url: sessions_path) do |form| %>

    <%= form.label :email_address, "Email Address" %>
    <%= form.text_field :email_address, placeholder:"email address"%>

    <%= form.label :password, "Password" %>
    <%= form.password_field :password, placeholder:"password" %><br/>

    <%= form.submit "Sign In", class: "btn btn-danger" %>

<% end %>